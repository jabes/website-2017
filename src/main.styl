@import "~assets/styles/functions"
@import "~assets/styles/variables"
@import "~assets/styles/mixins"

html, body
  margin 0
  padding 0
  width 100%
  height 100%

html
  box-sizing border-box
  font-family 'Roboto', sans-serif

*,
*::before,
*::after
  box-sizing inherit

svg
  display block
  width 100%
  height 100%
  fill currentColor

app-root
  display block

.emoji
  vertical-align middle
  display inline-block
  width 1.25em
  height 1.25em
  marign 0

.button-container
  display flex
  align-items center
  justify-content center
  padding 6em 0 3em 0

.button
  overflow hidden
  position relative
  display inline-block
  font-family 'Spectral SC', serif
  color rgba(white, .8)
  text-shadow 0px -1px 0px rgba(black, .4)
  text-decoration none
  text-align center
  line-height 1
  letter-spacing 0.025em
  cursor pointer
  padding .6em .8em
  border none
  border-bottom 2px solid
  border-radius 5px

  +media-xs()
    font-size 1.6em
  +media-md()
    font-size 1.8em
  +media-lg()
    font-size 2em
  +media-xl()
    font-size 2.2em

  span
    display block
    position relative
    z-index 10

  &:hover
    color white

  &:active
    transform translateY(2px)

  &::after,
  &::before
    content ''
    position absolute
    top 0
    left calc(-100% - 60px)
    width calc(100% + 40px)
    height 100%
    transform skew(-25deg)

  &::after
    z-index 0
    transition left 600ms cubic-bezier(0.86, 0, 0.07, 1) 200ms

  &::before
    z-index 5
    transition left 800ms cubic-bezier(0.86, 0, 0.07, 1)

  &:hover::after
    left calc(0% - 20px)
    transition left 600ms cubic-bezier(0.86, 0, 0.07, 1)

  &:hover::before
    left calc(0% - 20px)
    transition left 800ms cubic-bezier(0.86, 0, 0.07, 1)

  &.purple
    background #5851DB
    border-bottom-color darken(#5851DB, 50%)
    &::after
      background lighten(#5851DB, 50%)
    &::before
      background #833AB4

  &.gray
    background #222
    border-bottom-color #000
    &::after
      background #888
    &::before
      background #444

  &.red
    background #F56040
    border-bottom-color darken(#F56040, 50%)
    &::after
      background lighten(#F56040, 50%)
    &::before
      background #FD1D1D
