@import "functions"
@import "variables"
@import "mixins"

font-face(
  'Quicksand', 'Quicksand-Regular', 400, normal, swap, 'woff2',
  U+0000-00FF\, U+0131\, U+0152-0153\, U+02BB-02BC\, U+02C6\, U+02DA\, U+02DC\, U+2000-206F\, U+2074\, U+20AC\, U+2122\, U+2191\, U+2193\, U+2212\, U+2215\, U+FEFF\, U+FFFD
)

html, body
  width 100%
  height auto
  margin 0
  padding 0

html
  box-sizing border-box
  font-family 'Quicksand', sans-serif
  height 100%

body
  background-color #16324b

*,
*::before,
*::after
  box-sizing inherit

h1
h2
h3
h4
h5
h6
  font-weight normal

svg
  display block
  width 100%
  height 100%
  fill currentColor

app-root
  display block

img[data-src]
  z-index 0
  position absolute
  top 0
  left 0
  margin 0
  padding 0
  display block
  object-fit cover
  width 100%
  height 100%
  opacity 0
  transition opacity 300ms linear 100ms
  &.loaded
    opacity 1

.emoji
  vertical-align middle
  display inline-block
  width 1.25em
  height 1.25em
  marign 0

.button-container
  display flex
  align-items center
  justify-content center
  +media-xs()
    padding-top 40px
  +media-md()
    padding-top 60px
  +media-lg()
    padding-top 80px

.button
  overflow hidden
  position relative
  display inline-block
  font-size 1.8em
  text-decoration none
  text-align center
  line-height 1
  letter-spacing 0.025em
  cursor pointer
  padding .6em .8em
  border none
  border-bottom 2px solid
  border-radius 5px

  span
    display block
    position relative
    z-index 10

  &:active
    transform translateY(2px)

  &::after,
  &::before
    content ''
    position absolute
    top 0
    left calc(-100% - 60px)
    width calc(100% + 40px)
    height 100%
    transform skew(-25deg)

  &::after
    z-index 0
    transition left 600ms cubic-bezier(0.86, 0, 0.07, 1) 200ms

  &::before
    z-index 5
    transition left 800ms cubic-bezier(0.86, 0, 0.07, 1)

  &:hover::after
    left calc(0% - 20px)
    transition left 600ms cubic-bezier(0.86, 0, 0.07, 1)

  &:hover::before
    left calc(0% - 20px)
    transition left 800ms cubic-bezier(0.86, 0, 0.07, 1)

  &.theme-dark
    background #222
    border-bottom-color #000
    color rgba(white, .8)
    text-shadow 0px -1px 0px rgba(black, .4)
    &:hover
      color white
    &::after
      background #888
    &::before
      background #444

  &.theme-light
    background #DDD
    border-bottom-color #FFF
    color rgba(black, .8)
    text-shadow 0px -1px 0px rgba(white, .4)
    &:hover
      color black
    &::after
      background #999
    &::before
      background #BBB

.error-container
  text-align center
  max-width 500px
  margin auto

  h2
  p
    color #D72D28

  .http-error-icon
    display inline-block
    width 6em
    height 6em

.loading-container
  width 100%
  text-align center
  margin-bottom 8em

  .loading-icon
    display inline-block
    width 6em
    height 6em
    color #888
    animation spin 1s linear infinite
