@import "~assets/styles/functions"
@import "~assets/styles/variables"
@import "~assets/styles/mixins"

html, body
  margin 0
  padding 0
  width 100%
  height 100%

html
  box-sizing border-box
  font-family 'Roboto', sans-serif

*,
*::before,
*::after
  box-sizing inherit

svg
  display block
  width 100%
  height 100%
  fill currentColor

app-root
  display block

.emoji
  display inline-block
  width 1.25em
  height 1.25em
  marign 0
