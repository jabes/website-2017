@import "~assets/styles/functions"
@import "~assets/styles/variables"
@import "~assets/styles/mixins"

.youtube-overlay
  z-index 999
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(black, .9)

  .close-overlay-button
    display block
    cursor pointer
    margin 0
    padding 0
    border none
    background none
    position absolute
    top 2em
    right 2em

    .close-icon
      width 3em
      height 3em
      color white

    &:hover .close-icon
      color red

  .overlay-body
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background black
    width 100vw
    max-width 1440px
    aspect-ratio(16, 9)

    .video-frame
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background none
      border none

.youtube-videos
  display flex
  justify-content center
  flex-wrap wrap

.youtube-video
  overflow hidden
  position relative
  max-width 800px
  margin .5em
  border 5px solid rgba(white, .6)

  +media-md()
    flex 0 0 calc(100% / 1 - 1em)
  +media-lg()
    flex 0 0 calc(100% / 2 - 1em)

  &,
  & *
    transition all 200ms

  &:hover
    border-color white
    .play-icon
      opacity 0
    .video-thumbnail
      opacity 1
      filter grayscale(0)

  .play-icon
    color white
    position absolute
    top 50%
    left 50%
    width 5em
    height 5em
    transform translate(-50%, -50%)
    filter drop-shadow(0 1px 0 rgba(black, .75));

  .video-thumbnail
    display block
    width 100%
    height auto
    margin 0
    padding 0
    opacity .4
    filter grayscale(100%)

  .video-play-button
    display block
    cursor pointer
    margin 0
    padding 0
    border none
    background black
