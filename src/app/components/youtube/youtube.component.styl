@import "~assets/styles/functions"
@import "~assets/styles/variables"
@import "~assets/styles/mixins"

.youtube-overlay
  z-index 999
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background-color rgba(black, .85)

  .close-overlay-button
    display block
    cursor pointer
    margin 0
    padding 0
    border none
    background none
    position absolute
    top 2em
    right 2em

    .close-icon
      width 3em
      height 3em
      color white

    &:hover .close-icon
      color red

  .overlay-body
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    background white
    width 80vw
    max-width 1280px
    aspect-ratio(16, 9)

    .video-frame
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      background none
      border none

.youtube-videos
  display grid
  grid-gap 1em

  +media-md()
    grid-template-columns repeat(1, 1fr)
  +media-lg()
    grid-template-columns repeat(2, 1fr)

.youtube-video
  position relative

  .play-icon
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    width 5em
    height 5em
    color white

  .video-thumbnail
    display block
    width 100%
    height auto
    margin 0
    padding 0
    opacity .4

  .video-play-button
    display block
    cursor pointer
    margin 0
    padding 0
    border none
    background black
    &:hover
      .play-icon
        display none
      .video-thumbnail
        opacity 1
