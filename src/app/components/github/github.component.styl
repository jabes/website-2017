@import "functions"
@import "variables"
@import "mixins"

@keyframes fadeIn
  100%
    opacity 1

@keyframes infiniteScroll
  0%
    transform translate3d(0,0,0)
  100%
    transform translate3d(0,-320px,0)

.github-repos
  display flex
  justify-content center
  flex-wrap wrap

.github-repo
  opacity 0
  animation fadeIn 250ms linear forwards

  &:nth-child(1)
    animation-delay calc(100ms * 1)
  &:nth-child(2)
    animation-delay calc(100ms * 2)
  &:nth-child(3)
    animation-delay calc(100ms * 3)
  &:nth-child(4)
    animation-delay calc(100ms * 4)

  +media-xs()
    flex 0 0 calc(100% / 1 - 1em)

  +media-lg()
    flex 0 0 calc(100% / 2 - 1em)
    padding 20px
    margin-bottom 20px

  +media-md-below()
    &:not(:last-child)
      margin-bottom 30px
      padding-bottom 20px
      border-bottom 1px solid #DDD

  h3
    font-size 1.8em
    color #444
    margin 10px 0

  p
    font-size 1.4em
    color #666
    margin 10px 0

.repo-link
  position relative
  display block
  width 100%
  aspect-ratio(64, 25)
  background #CCC
  margin-bottom 10px
  border 3px solid white
  transition border 200ms

  &:hover
    border-color #52a0ad

.repo-stats
  margin 10px 0

  .repo-stat
    display inline-block
    &:not(:last-child)
      margin-right .75em

    .stat-count
      display inline-block
      vertical-align middle
      font-size 1em
      color #52a0ad

    .stat-icon
      display inline-block
      vertical-align middle
      width 1em
      height 1em
      color #52a0ad

.bg-scroll-container
  z-index -1
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  background-color #eee

.bg-scroll-el
  z-index 1
  position absolute
  top 0
  left 0
  height 400%
  width 100%
  background image-url("codepen.svg")
  background-position center center
  background-size 500px
  animation infiniteScroll 5s linear infinite
  opacity .5
