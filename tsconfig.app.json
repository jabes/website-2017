{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./public/out-tsc/app",
    "paths": {
      "@app/*": ["src/app/*"],
      "@env/*": ["src/environments/*"]
    }
  },
  "include": [
    "src/main.ts",
    "src/polyfills.ts",
    "src/typings.d.ts",
    "src/typings.*.d.ts",
    "src/app/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}